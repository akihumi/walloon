<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="balloon.walloon.app"
    android:versionCode="3"
    android:versionName="2.1" >

    <uses-sdk android:minSdkVersion="4" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/balloon"
        android:label="@string/icon_name">
        <activity
            android:label="@string/app_name"
            android:name=".Walloon" 
            android:theme="@android:style/Theme.NoTitleBar" 
            android:configChanges="keyboardHidden|orientation" 
            android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            	<category android:name="android.intent.category.DEFAULT" />
            	<category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="twitter.com/"/>
            </intent-filter>
        </activity>
        <activity android:name=".FilePicker" 
                  android:configChanges="keyboardHidden|orientation" 
                  android:screenOrientation="portrait"></activity>
        <activity android:name=".TwitterLogin"></activity>
    </application>

</manifest>