<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/walloonCount"
            android:textColor="#ff000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_text"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/numView1"
            android:textColor="#ff000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="number"
            android:textSize="24sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/balloonView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/balloon" />

    <ImageView
        android:id="@+id/balloonView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100dp"
        android:src="@drawable/balloon" />

    <ImageView
        android:id="@+id/balloonView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/balloonView2"
        android:layout_marginBottom="26dp"
        android:src="@drawable/balloon" />

    <ImageView
        android:id="@+id/balloonView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:src="@drawable/balloon" />

    <ImageView
        android:id="@+id/balloonView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/balloon" />

    <ImageView
        android:id="@+id/balloonView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:src="@drawable/balloon"
        android:visibility="gone" />

</RelativeLayout>